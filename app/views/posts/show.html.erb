<h2><%= @post.topic %> <a href="/posts/<%= @post.id %>/edit">(edit)</a></h2>
<p><%= @post.content%></p>
<h3>Comments</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <a href="/comments/<%= comment.id %>">
        <%= comment.topic %> (<%= comment.post.topic %>)
      </a>
    </li>
  <% end %>
</ul>