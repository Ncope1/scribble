<h2>Edit <%= @comment.topic %></h2>

<%= form_for @topic, url: "/comments/#{@comment.id}", method: :put do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :post_id %>
  <%= f.text_field :post_id %>

  <%= f.submit "Edit" %>
<% end %>

<%= form_for @comment, url: "/comments/#{@comment.id}", method: :delete do |f| %>
  <% f.submit "Delete", class: "btn-delete" %>
<% end %>